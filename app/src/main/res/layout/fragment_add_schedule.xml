<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddScheduleFragment">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintVertical_chainStyle="packed"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/main_blue_icon"
                android:layout_marginEnd="20dp"
                android:tint="@color/colorPrimarys"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:id="@+id/image_blue"
                />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:id="@+id/back_click"
                android:layout_marginTop="30dp"
                android:tint="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back_click"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:text="Title"
                android:id="@+id/title_label"
                android:textStyle="bold"
                android:textColor="@color/light_grey"
                android:textSize="15sp"
                />




              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_marginTop="10dp"
                  android:layout_height="50dp"
                  style="@style/EditTextTheme"
                  android:orientation="vertical"
                  android:background="@drawable/edit_text_background"
                  android:id="@+id/title_layout"
                  app:layout_constraintTop_toBottomOf="@id/title_label"
                  >

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:text=""
                      android:hint="Select Title"
                      android:layout_marginStart="10dp"
                      />

                  <ImageView
                      android:layout_marginEnd="10dp"
                      android:layout_centerVertical="true"
                      android:layout_alignParentEnd="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/drop_downs"
                      android:tint="@color/colorPrimarys"
                      />

              </RelativeLayout>





               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:layout_marginTop="20dp"
                   app:layout_constraintTop_toBottomOf="@+id/title_layout"
                   app:layout_constraintStart_toStartOf="parent"
                   android:id="@+id/others"
                   android:visibility="visible"
                   android:hint="others"
                   android:paddingLeft="10dp"
                   android:layout_marginBottom="20dp"
                   style="@style/EditTextTheme"
                   android:background="@drawable/edit_text_background"
                   />







            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/others"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="Date"
                android:id="@+id/date_label"
                android:textStyle="bold"
                android:textColor="@color/light_grey"
                android:textSize="15sp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/date_label"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/date"
                style="@style/EditTextTheme"
                android:background="@drawable/edit_text_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="02-04-2023"
                    android:id="@+id/date_txt"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="Time"
                android:id="@+id/time_label"
                android:textStyle="bold"
                android:textColor="@color/light_grey"
                android:textSize="15sp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/time_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:id="@+id/time_layout"
                android:gravity="center"
                android:orientation="vertical"
                style="@style/EditTextTheme"
                android:background="@drawable/edit_text_background">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="02:03:am"
                    android:id="@+id/time"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="start"
                    />

            </RelativeLayout>



            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/colorPrimarys"
                app:layout_constraintTop_toBottomOf="@+id/time_layout"
                android:layout_marginTop="40dp"
                app:cornerRadius="8dp"
                android:padding="12dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/save_btn"
                android:text="Save"
                app:layout_constraintStart_toStartOf="parent"

                />





        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>